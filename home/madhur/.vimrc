set bg=dark
set number
syntax on
" set cursorline
set expandtab
set shiftwidth=4

set tabstop=4       " The width of a TAB is set to 4.
                    " Still it is a \t. It is just that
                    " Vim will interpret it to be having
                    " a width of 4.
                    

set incsearch
" Keep 1000 items in the history
set history=1000

" show the cursor postion
set ruler

" show incomplete commands
set showcmd

" Shows a menu when using tab completion
set wildmenu

set scrolloff=5

set hlsearch

" Set auto indent
set ai

" Set smart indent
set si


