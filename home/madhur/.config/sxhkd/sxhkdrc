# terminal emulator
super + Return
    kitty

#calculator
super + c
    rofi -show calc -modi calc -no-show-match -no-sort

# program launcher
super + d
    rofi -show drun -show-icons -icon-theme "Papirus" -hover-select -me-select-entry '' -me-accept-entry MousePrimary

# program launcher
super + shift + d
    rofi -show run -show-icons -icon-theme "Papirus" -hover-select -me-select-entry '' -me-accept-entry MousePrimary

super + b
     /home/madhur/scripts/rofi-bluetoth/rofi-bluetooth

# make sxhkd reload its configuration files:
#super + Escape
#	pkill -USR1 -x sxhkd

# app listing
super + F3
    rofi -no-lazy-grab -show drun -theme "$HOME/.config/rofi/searcher.rasi" -icon-theme "Papirus" -hover-select -me-select-entry '' -me-accept-entry MousePrimary


