#
# wm independent hotkeys
#

# terminal emulator
super + Return
    kitty

super + grave
    /home/madhur/scripts/tdrop.sh

#calculator
super + c
    /home/madhur/scripts/start_calc.sh

# program launcher
super + shift + d
    rofi -show drun -show-icons -icon-theme "Papirus" -hover-select -me-select-entry '' -me-accept-entry MousePrimary


# program launcher
super + d
    /home/madhur/scripts/launcher.sh

super + b
     /home/madhur/scripts/rofi-bluetoth/rofi-bluetooth

super  + s
    eww open bindkeys --toggle

#new power menu
super + x
    key-power

# Do brightness
XF86MonBrightness{Up,Down}
    brightness{ --up, --down}

# run flameshot
super + F12
    flatpak run org.flameshot.Flameshot gui -p ~/flameshot --clipboard --print-geometry

super + F11
    /home/madhur/.config/rofi/applets/bin/screenshot.sh

super + F3
    /home/madhur/scripts/codebrowser.sh

super + F4
    /home/madhur/scripts/homebrowser.sh


# Copy VPN username
ctrl + m
    echo -n madhur.ahuja | xclip -selection clipboard

# Copy VPN Password
ctrl + comma
    echo -n ksfWSGDNXY0Svtx | xclip -selection clipboard

~button2
    echo -n | xsel -n -i

~button3
   xqp 0 $(xdo id -N "" -n root) &&  jgmenu

